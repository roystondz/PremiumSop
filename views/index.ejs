<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vivid Luxury</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="w-full h-full bg-white-100">
    <div class="p-10 text-4xl tracking-tighter text-center">
        <h1>Vivid Luxury</h1>
    </div>
    <div class="flex flex-col lg:flex-row p-10 items-stretch justify-center gap-10">
        <!-- Sign up Section -->
        <div class="signup w-full lg:w-1/3 bg-blue-100 rounded-md p-10">
            <h1 class="tracking-tighter text-2xl mb-5 text-center">Sign Up</h1>
            <form class="signup" action="/users/register" method="post">
                <input 
                    class="block w-full outline-none border-blue-200 border-2 rounded-md px-3 py-2 mb-4" 
                    type="text" placeholder="Name" name="name" required>
                <input 
                    class="block w-full outline-none border-blue-200 border-2 rounded-md px-3 py-2 mb-4" 
                    type="email" placeholder="Email" name="email" required>
                <input 
                    class="block w-full outline-none border-blue-200 border-2 rounded-md px-3 py-2 mb-4" 
                    type="password" placeholder="Password" name="password" required>
                <input 
                    class="block w-full text-center bg-blue-500 text-white px-3 py-2 rounded-md cursor-pointer hover:bg-blue-600" 
                    type="submit" value="Sign Up">
            </form>
        </div>

        <!-- Login Section -->
        <div class="login w-full lg:w-1/3 bg-blue-100 rounded-md p-10">
            <h1 class="tracking-tighter text-2xl mb-5 text-center">Login</h1>
            <form class="login" action="/users/login" method="post">
                <input 
                    class="block w-full outline-none border-blue-200 border-2 rounded-md px-3 py-2 mb-4" 
                    type="email" placeholder="Email" name="email" required>
                <input 
                    class="block w-full outline-none border-blue-200 border-2 rounded-md px-3 py-2 mb-4" 
                    type="password" placeholder="Password" name="password" required>
                <input 
                    class="block w-full text-center bg-blue-500 text-white px-3 py-2 rounded-md cursor-pointer hover:bg-blue-600" 
                    type="submit" value="Login">
            </form>
        </div>
    </div>
</body>
</html>
